<Page x:Class="foca_project.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:foca_project.Views"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280" MinHeight="720" MinWidth="1280"
      Title="LoginPage" Background="#12372A">

    <Grid>
        <Border x:Name="base" Width="983" MinWidth="983" Height="553" MinHeight="553" Background="#EEEEEE" BorderBrush="#EEEEEE" CornerRadius="30" Margin="148,83.5,148,83.5"/>
        <Image x:Name="logo" Source="/Resources/Logo v3.png" Width="322" MinWidth="322" Height="322" MinHeight="322" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="224,199,734,199"></Image>
        <Label x:Name="titulo" Content="Fazer Login" Width="330" MinWidth="330" Height="90" MinHeight="90" Margin="708,162,242,468" FontSize="64" FontFamily="Roboto Serif" VerticalContentAlignment="Center"/>
        <TextBox x:Name="campo_Email" Height="46" MinHeight="46" Width="315" MinWidth="315" Margin="715,272,250,402" Background="#EEEEEE" BorderBrush="#9B9A9A" BorderThickness="0 0 0 3" Text="E-mail" TextAlignment="Left" VerticalContentAlignment="Center" FontSize="24" Foreground="#9B9A9A" GotFocus="CampoEmail_GotFocus" LostFocus="CampoEmail_LostFocus"/>
        <TextBox x:Name="campo_Senha" Height="46" MinHeight="46" Width="315" MinWidth="315" Margin="716,392,250,282" Background="#EEEEEE" BorderBrush="#9B9A9A" BorderThickness="0 0 0 3" Text="Senha" TextAlignment="Left" VerticalContentAlignment="Center" FontSize="24" Foreground="#9B9A9A" GotFocus="CampoSenha_GotFocus" LostFocus="CampoSenha_LostFocus"/>
        <Image x:Name="icone_carta" Source="/Resources/Icone email.png" Height="23" Width="23" Margin="685,284,572,414"/>
        <Image x:Name="icone_cadeado" Source="/Resources/Icone cadeado.png" Height="24" Width="24" Margin="684,403,572,293"/>
        <Button x:Name="botaoConfirmar" Height="51" Width="216" Margin="764,512,300,157" Background="#EEEEEE" BorderThickness="3" BorderBrush="#9B9A9A" Content="Confirmar" FontSize="30" VerticalContentAlignment="Center" Click="botaoConfirmar_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"></Setter>
                </Style>
            </Button.Resources>
        </Button>
        <Label x:Name="texto_Login" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="25" Width="25" MinHeight="25" MinWidth="25" Margin="826,560,426,133" Content="ou" VerticalContentAlignment="Center"/>
        <Button x:Name="botao_Cadastro" Content="Cadastre-se" Width="66" Height="19" MinWidth="66" MinHeight="19" Background="#EEEEEE" BorderBrush="#EEEEEE" Margin="849,564,365,137" Foreground="Blue" Click="Botao_Cadastro_Click" />

    </Grid>
</Page>
